@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Role Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ROL ADI</th>
        <th>ROLÜ SİL</th>
        <th>ROLÜ GÜNCELLE</th>
    </tr>
    @if(Model.Count>0)
    {
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Rölü Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-danger">Rölü Güncelleme</a></td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td class="alert alert-success">Herhangi bir Role Bulunmadı</td>
        </tr>
    } 

</table>
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Röl Girişi</a>

